<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Category">


    <TextView
        android:id="@+id/txt_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5sp"
        android:textColor="@color/red"
        android:textSize="15dp"
        android:text="@string/Find_licensed_insured_nearest_local_Pro_in_real_time" />

    <RelativeLayout
        android:id="@+id/relative_search"
        android:layout_below="@+id/txt_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textColor="@color/black"
            android:id="@+id/txt_searchCatgory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="15dp"
            android:hint="@string/what_service_are_you_looking_for"
            android:padding="15sp">

        </EditText>

        <ImageView
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/txt_searchCatgory"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/search">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@id/relative_category"
        android:background="@color/white"
        android:layout_below="@+id/relative_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_category"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text=""
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>



        <ImageView
            android:id="@+id/image_select_category"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/grid">
        </ImageView>



        <ImageView
            android:layout_toLeftOf="@+id/image_select_category"
            android:id="@+id/image_lazyload"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/spinnerloader">
        </ImageView>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_category"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

    </androidx.recyclerview.widget.RecyclerView>


    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>