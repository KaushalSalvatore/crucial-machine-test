<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Category">


    <TextView
        android:id="@+id/txt_lazyload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_categories"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@color/blue"
        android:padding="15sp"
        android:text="@string/lazy_loading"
        android:textColor="@color/red"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_categories"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="15sp"
        android:background="@color/blue"
        android:text="@string/show_categories"
        android:textColor="@color/red"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_location"
        android:layout_below="@+id/txt_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="15sp"
        android:background="@color/blue"
        android:text="@string/map_direction"
        android:textColor="@color/red"
        android:textSize="15dp" />



</RelativeLayout>