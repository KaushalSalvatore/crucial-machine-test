<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/customer_image"
        android:src="@drawable/spinnerloader"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY">
    </ImageView>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/customer_image"
        android:id="@+id/txt_cusotmerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:paddingLeft="5sp"
        android:paddingTop="5dp">
    </TextView>

    <TextView
        android:layout_below="@+id/txt_cusotmerName"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/customer_image"
        android:id="@+id/txt_statustitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:paddingLeft="5sp"
        android:paddingTop="5dp">
    </TextView>

    <TextView
        android:layout_below="@+id/txt_statustitle"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/customer_image"
        android:id="@+id/txt_servicesnames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:paddingLeft="5sp"
        android:paddingTop="5dp">
    </TextView>

    <TextView
        android:layout_below="@+id/txt_servicesnames"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/customer_image"
        android:id="@+id/txt_bookingaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:paddingLeft="5sp"
        android:paddingTop="5dp">
    </TextView>


</RelativeLayout>